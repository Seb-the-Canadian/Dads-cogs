// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? @db.Text
    access_token             String? @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]

    memberships   LeagueMember[]
    submissions   Submission[]
    votesCast     Vote[]
    ownedLeagues  League[]       @relation("LeagueAdmin")

    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model League {
    id                String         @id @default(cuid())
    name              String
    slug              String         @unique
    adminId           String
    admin             User           @relation("LeagueAdmin", fields: [adminId], references: [id])
    discordWebhookUrl String?
    status            String         @default("ACTIVE")
    rounds            Round[]
    members           LeagueMember[]
    createdAt         DateTime       @default(now())
    updatedAt         DateTime       @updatedAt

    @@index([slug])
}

model LeagueMember {
    id         String   @id @default(cuid())
    userId     String
    leagueId   String
    user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    league     League   @relation(fields: [leagueId], references: [id], onDelete: Cascade)

    @@unique([userId, leagueId])
    @@index([leagueId])
}

model Round {
    id              String       @id @default(cuid())
    leagueId        String
    league          League       @relation(fields: [leagueId], references: [id], onDelete: Cascade)
    roundNumber     Int
    theme           String?
    description     String?
    submissionStart DateTime
    submissionEnd   DateTime
    votingStart     DateTime
    votingEnd       DateTime
    status          RoundStatus  @default(SUBMISSION)
    playlistId      String?
    playlistUrl     String?
    submissions     Submission[]
    votes           Vote[]
    createdAt       DateTime     @default(now())
    updatedAt       DateTime     @updatedAt

    @@unique([leagueId, roundNumber])
    @@index([leagueId])
    @@index([status])
}

enum RoundStatus {
    SUBMISSION
    VOTING
    COMPLETED
}

model Submission {
    id             String   @id @default(cuid())
    roundId        String
    round          Round    @relation(fields: [roundId], references: [id], onDelete: Cascade)
    userId         String
    user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    spotifyTrackId String
    trackName      String
    artistName     String
    albumArt       String?
    previewUrl     String?
    totalPoints    Int      @default(0)
    votes          Vote[]
    createdAt      DateTime @default(now())

    @@unique([roundId, userId])
    @@index([roundId])
}

model Vote {
    id           String     @id @default(cuid())
    roundId      String
    round        Round      @relation(fields: [roundId], references: [id], onDelete: Cascade)
    submissionId String
    submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
    userId       String
    user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
    points       Int
    createdAt    DateTime   @default(now())

    @@unique([roundId, userId, submissionId])
    @@index([roundId])
    @@index([submissionId])
}
